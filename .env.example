# Server url
NEXT_PUBLIC_SERVER_URL=http://localhost:3000/api/v1
NEXT_PUBLIC_SELF_URL=http://localhost:3001

# Public resource directory
NEXT_PUBLIC_ASSETS_DIR=

# Authentication Configuration
# AUTH_METHOD options: 'local' | 'sso' | 'both'
NEXT_PUBLIC_AUTH_METHOD=both

# Azure AD SSO Configuration (Required for 'sso' or 'both' auth methods)
NEXT_PUBLIC_AZURE_AD_CLIENT_ID=your-azure-ad-client-id
NEXT_PUBLIC_AZURE_AD_TENANT_ID=your-azure-ad-tenant-id
NEXT_PUBLIC_AZURE_AD_REDIRECT_URI=http://localhost:3001/auth/callback
NEXT_PUBLIC_AZURE_AD_AUTHORITY=https://login.microsoftonline.com/your-azure-ad-tenant-id

# JWT Configuration (Required for 'local' or 'both' auth methods)
NEXT_PUBLIC_JWT_SECRET=your-secure-jwt-secret-key-here
NEXT_PUBLIC_JWT_EXPIRES_IN=7d

# Mapbox
NEXT_PUBLIC_MAPBOX_API_KEY=

# Firebase
NEXT_PUBLIC_FIREBASE_API_KEY=
NEXT_PUBLIC_FIREBASE_AUTH_DOMAIN=
NEXT_PUBLIC_FIREBASE_PROJECT_ID=
NEXT_PUBLIC_FIREBASE_STORAGE_BUCKET=
NEXT_PUBLIC_FIREBASE_MESSAGING_SENDER_ID=
NEXT_PUBLIC_FIREBASE_APPID=

# AWS
NEXT_PUBLIC_AWS_AMPLIFY_USER_POOL_ID=
NEXT_PUBLIC_AWS_AMPLIFY_USER_POOL_WEB_CLIENT_ID=
NEXT_PUBLIC_AWS_AMPLIFY_REGION=

# Auth0
NEXT_PUBLIC_AUTH0_DOMAIN=
NEXT_PUBLIC_AUTH0_CLIENT_ID=
NEXT_PUBLIC_AUTH0_CALLBACK_URL=

# Supabase
NEXT_PUBLIC_SUPABASE_URL=
NEXT_PUBLIC_SUPABASE_ANON_KEY=
